<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_repay_pic"
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_280"
            android:src="@mipmap/book1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_50"
            android:orientation="vertical">

            <TextView
                style="@style/finger_input"
                android:id="@+id/repay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/need_return_time"/>

            <TextView
                style="@style/repay_author"
                android:id="@+id/repay_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:text="@string/need_return_time"/>

            <TextView
                style="@style/repay_author"
                android:id="@+id/repay_address"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_30"
                android:text="@string/need_return_time"/>

            <Button
                style="@style/borrow_button"
                android:id="@+id/repay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_40"
                android:background="@drawable/fetch_button"
                android:text="@string/fetch_book" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_25"
        android:background="@mipmap/item_dotted"/>
</LinearLayout>