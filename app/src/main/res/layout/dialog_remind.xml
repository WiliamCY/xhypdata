<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_642" android:layout_height="@dimen/margin_642"
    android:background="@drawable/progress_bg">

    <ImageView
        android:id="@+id/remind_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_50"
        android:src="@mipmap/icon_reminders" />

    <TextView
        android:id="@+id/remind_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/remind_pic"
        android:layout_marginTop="@dimen/margin_50"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_36"
        android:text="@string/no_order"/>

    <Button
        android:id="@+id/remind_click"
        style="@style/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_know"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_30"
        android:background="@drawable/defeated_button"/>

</RelativeLayout>