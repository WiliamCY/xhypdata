<resources>

    <!--提示框style-->
    <style name="custom_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="tabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">32sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="top_bar_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="account_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fingerprint_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@drawable/fingerprint_text</item>
    </style>

    <style name="main_day_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_48</item>
        <item name="android:textColor">@color/main_day</item>
    </style>

    <style name="main_month_text">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>

    <style name="main_sentence">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>

    <style name="main_borrow">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_36</item>
    </style>

    <style name="main_borrow_instructions">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="main_recover">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_28</item>
    </style>

    <style name="finger_input">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_32</item>
    </style>

    <style name="finger_msg">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_28</item>
    </style>

    <style name="finger_name">
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:textSize">@dimen/text_32</item>
    </style>

    <style name="borrow_name">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>

    <style name="borrow_button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_26</item>
    </style>

    <style name="borrow_success">
        <item name="android:textColor">@color/success</item>
        <item name="android:textSize">@dimen/text_36</item>
    </style>

    <style name="scan_success">
        <item name="android:textColor">@color/success_msg</item>
        <item name="android:textSize">@dimen/text_28</item>
    </style>

    <style name="repay_author">
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>
</resources>
